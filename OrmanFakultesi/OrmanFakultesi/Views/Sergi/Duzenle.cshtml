
@{
    ViewBag.Title = "Duzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using OrmanFakultesi.Models

@model Sergi

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Şu anda <b> @Model.adi </b>isimli sergiyi düzenliyorsunuz...
            </header>
            <div class="panel-body">
                <form role="form" method="post" action="/Sergi/Duzenle" enctype="multipart/form-data">
                    <div class="form-group">
                        <label>Sergi Adı</label>
                        <input name="adi" type="text" class="form-control" value="@Model.adi">
                    </div>
                    <div class="form-group">
                        <label>Kısa Açıklama</label>
                        <input name="kisaAciklama" type="text" class="form-control" value=" @Model.kisaAciklama">
                    </div>
                    <div class="form-group">
                        <label>Açıklama</label>
                        <input name="aciklama" type="text" class="form-control" value="@Model.aciklama" >
                    </div>
                    <div class="form-group">
                        <img src="~/Content/Admin/img/sergi/anasergi/@Model.resimYolu" style="width:75px;margin-bottom:5px;" /><br />
                        <label for="exampleInputFile">Görsel Seçiniz</label>
                        <input type="file" id="exampleInputFile" name="file" accept=".jpg,.jpeg,.png" onchange="validateFileType()">
                    </div>
                    @Html.Hidden("sergiID",Model.sergiID)
                    <button type="submit" class="btn btn-info">Kaydet</button>
                </form>
            </div>
        </section>
    </div>

</div>


