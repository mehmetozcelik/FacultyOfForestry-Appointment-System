
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Sergi Ekle
            </header>
            <div class="panel-body">
                <form role="form" method="post" action="/Sergi/Ekle" enctype="multipart/form-data">
                    <div class="form-group">
                        <label>Sergi Adı</label>
                        <input name="adi" type="text" class="form-control" placeholder="Sergi adını Giriniz...">
                    </div>
                    <div class="form-group">
                        <label>Kısa Açıklama</label>
                        <input name="kisaAciklama" type="text" class="form-control" placeholder="Kısa acıklama giriniz...">
                    </div>
                    <div class="form-group">
                        <label>Açıklama</label>
                        <input name="aciklama" type="text" class="form-control" placeholder="Açıklama giriniz...">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputFile">Görsel Seçiniz</label>
                        <input type="file" id="exampleInputFile" name="file" accept=".jpg,.jpeg,.png" onchange="validateFileType()">
                    </div>
                    <button type="submit" class="btn btn-info">Kaydet</button>
                </form>

               

            </div>
        </section>
    </div>

</div>

