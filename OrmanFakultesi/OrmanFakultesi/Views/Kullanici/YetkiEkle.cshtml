
@{
    ViewBag.Title = "YetkiEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Yetki Ekle
            </header>
            <div class="panel-body">
                <form role="form" method="post" action="/Kullanici/YetkiEkle">
                    <div class="form-group">
                        <label>Yetki Adi</label>
                        <input name="adi" type="text" class="form-control" placeholder="Yetki adını giriniz...">
                    </div>
                    <div class="form-group">
                        <label>Aciklamasi</label>
                        <input name="aciklama" type="text" class="form-control" placeholder="Yetki Aciklamasını giriniz...">
                    </div>
                    <button type="submit" class="btn btn-info">Kaydet</button>
                </form>

            </div>
        </section>
    </div>

</div>
