
@{
    ViewBag.Title = "KullaniciEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model SelectList
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Kullanıcı Ekle
            </header>
            <div class="panel-body">
                <form role="form" method="post" action="/Kullanici/KullaniciEkle">
                    <div class="form-group">
                        <label>Adı</label>
                        <input name="adi" type="text" class="form-control" placeholder="Adini giriniz...">
                    </div>
                    <div class="form-group">
                        <label>Soyadi</label>
                        <input name="soyadi" type="text" class="form-control" placeholder="Soyadini giriniz...">
                    </div>
                    <div class="form-group">
                        <label>Mail Adresi</label>
                        <input name="mail" type="email" class="form-control" placeholder="Mail Adresini giriniz...">
                    </div>
                    <div class="form-group">
                        <label>Şifre</label>
                        <input name="sifre" type="password" class="form-control" placeholder="Şifre giriniz...">
                    </div>
                    <div class="form-group">
                        <label>Yetki Seçiniz</label>
                        @Html.DropDownList("yetkiID", Model, "Seçiniz", new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-info">Kaydet</button>
                </form>

            </div>
        </section>
    </div>

</div>

