
@{
    ViewBag.Title = "KullaniciDuzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using OrmanFakultesi.Models


@model Kullanici
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Şu anda @Model.adi @Model.soyadi isimli kullanıcı bilgilerini düzenliyorsunuz...
            </header>
            <div class="panel-body">
                <form role="form" method="post" action="/Kullanici/KullaniciDuzenle">
                    <div class="form-group">
                        <label>Adı</label>
                        <input name="adi" type="text" class="form-control" value="@Model.adi">
                    </div>
                    <div class="form-group">
                        <label>Soyadi</label>
                        <input name="soyadi" type="text" class="form-control" value="@Model.soyadi">
                    </div>
                    <div class="form-group">
                        <label>Mail Adresi</label>
                        <input name="mail" type="email" class="form-control" value="@Model.mail">
                    </div>
                    <div class="form-group">
                        <label>Şifre</label>
                        <input name="sifre" type="password" class="form-control" value="@Model.sifre">
                    </div>
                    <div class="form-group">
                        <label>Yetki Seçiniz</label>
                        @Html.DropDownList("yetkiID", (SelectList)ViewBag.yetkiler, "Seçiniz", new { @class = "form-control" })
                    </div>

                    @Html.Hidden("kullaniciID",Model.kullaniciID)
                    <button type="submit" class="btn btn-info">Kaydet</button>
                </form>

            </div>
        </section>
    </div>

</div>
