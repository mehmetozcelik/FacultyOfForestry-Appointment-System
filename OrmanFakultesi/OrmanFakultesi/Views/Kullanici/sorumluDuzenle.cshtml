
@{
    ViewBag.Title = "sorumluDuzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using OrmanFakultesi.Models
@model SergiSorumlulari
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Şu anda @Model.adi isimli Sergi Sorumlusunu düzenliyorsunuz...
            </header>
            <div class="panel-body">
                <form role="form" method="post" action="/Kullanici/sorumluDuzenle">
                    <div class="form-group">
                        <label>Sorumlu Adi</label>
                        <input name="adi" type="text" class="form-control" value="@Model.adi">
                    </div>
                    <div class="form-group">
                        <label>Aciklamasi</label>
                        <input name="mail" type="text" class="form-control" value="@Model.mail">
                    </div>
                    @Html.Hidden("sorumluID", Model.sorumluID)
                    <button type="submit" class="btn btn-info">Kaydet</button>
                </form>

            </div>
        </section>
    </div>

</div>


