
@{
    ViewBag.Title = "sorumluEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Sergi Sorumlusu Ekle
            </header>
            <div class="panel-body">
                <form role="form" method="post" action="/Kullanici/sorumluEkle">
                    <div class="form-group">
                        <label>Sorumlu Adi</label>
                        <input name="adi" type="text" class="form-control" placeholder="Sorumlu adını giriniz...">
                    </div>
                    <div class="form-group">
                        <label>Mail Adresi</label>
                        <input name="mail" type="text" class="form-control" placeholder="Mail Adresini giriniz...">
                    </div>
                    <button type="submit" class="btn btn-info">Kaydet</button>
                </form>

            </div>
        </section>
    </div>

</div>

