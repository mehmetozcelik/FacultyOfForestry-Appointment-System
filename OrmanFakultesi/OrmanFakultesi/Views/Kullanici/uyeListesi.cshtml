
@{
    ViewBag.Title = "uyeListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@using OrmanFakultesi.Models

@model List<Uye>


<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading" style="padding:20px;">
                Üye Listesi
            </header>
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th>Kurum Adı</th>
                        <th>Üye Adı</th>
                        <th>Üye Soyadı</th>
                        <th>Mail</th>
                        <th>T.C.</th>
                        <th>Telefon</th>
                        <th>Randevu Sayısı</th>
                        <th style="text-align:right;"> İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr id="@item.uyeID">
                        <td>@item.kurumAdi</td>
                        <td>@item.adi</td>
                        <td>@item.soyadi</td>
                        <td>@item.mail</td>
                        <td>@item.tc</td>
                        <td>@item.tel</td>
                        <td>@item.Randevu.Count()</td>
                        <td style="text-align:right">
                         <button data-id="@item.uyeID" class="btn btn-danger btn-xs sil"><i class="icon-trash "></i> Sil</button>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </section>
    </div>
</div>

<script src="/Content/Admin/js/jquery.js"></script>
<script src="/Content/Admin/js/jquery-1.8.3.min.js"></script>

<script>
        $(document).ready(function () {
            $('.sil').click(function () {
                var id = $(this).attr("data-id");
                $.ajax({
                    url: '/Kullanici/uyeSil/' + id,
                    type: 'POST',
                    success: function (rs) {
                        if (rs === true) {
                            $('#' + id).remove();
                        }
                        else {
                            alert('Silme işlemi gerçekleşirken bir hata oluştu.');
                        }
                    },
                    error: function (rs) {
                        alert('Bir hata oluştu' + id);
                    }
                });
            });
        });

</script>

